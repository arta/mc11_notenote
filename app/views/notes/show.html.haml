.wrapper_with_padding
  #note_show
    %h1.title= @note.title
    %p= simple_format @note.content

  .buttons
    =link_to 'All Notes', notes_path, class:'button'
    =link_to 'Edit', [:edit, @note], class:'button'
    =link_to 'Delete', @note, method: :delete, data:{ confirm:'Are you sure?' }, class:'button'
